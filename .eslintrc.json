{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true,
		"browser": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"extends": [
		"eslint:recommended", 
		"plugin:@typescript-eslint/recommended"
	],
	"plugins": [
		"@typescript-eslint", 
		"prettier"
	],
	"rules": {
		"prettier/prettier": [
			1,
			{
					"trailingComma": "none",
					"useTabs": true,
					"tabWidth": 2,
					"semi": true,
					"arrowParens": "avoid",
					"singleQuote": false,
					"endOfLine": "lf"
			}
		]
	}
}
